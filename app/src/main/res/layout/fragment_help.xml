<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F84A4A"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/appbar"
       android:layout_width="match_parent"
       android:layout_height="280dp"
       android:fitsSystemWindows="true"
       android:theme="@style/Theme.RedRay_final"
       android:backgroundTint="#F84A4A"
      >


       <com.google.android.material.appbar.CollapsingToolbarLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fitsSystemWindows="true"
           app:contentScrim="?attr/colorPrimary"
           app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
           app:title="RED RAY"
           android:id="@+id/collapsing_toolbar"
           android:background="#FFFF"
            >

            <ImageView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:src="@drawable/back"
                android:scaleType="centerCrop"
                android:layout_gravity="center|end"
                android:layout_marginBottom="15dp"
                app:layout_collapseMode="parallax"
                />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    />


       </com.google.android.material.appbar.CollapsingToolbarLayout>

   </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/help_layout2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90dp"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:text="Our app is used to find donor for required blood easily and in minimal time specifically in the situations of road accidents or blood diseases where immediate blood is required for the patient to survive
"
                android:textSize="3mm"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="Here are some details for finding required blood donor using the app
"
                android:textColor="@color/black"
                android:textSize="3mm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:text="Step:1 Register your self as a user with appropriate details.
"
                android:textSize="3mm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:text="Step:2 Go to search donor screen where  the user has to enter the following details 1.Blood group of the patient2.Hospital address 3.Landmark 4.Pincode of hospital area 5.HospitalId. Take a Note that Hospital id will be provided by the hospital for the particular patient for authentication purpose.
"
                android:textSize="3mm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:text= "In home screen Recent updates regarding blood donations and its situations around the world is provided. Users can see their profile  in profile screen and can also update their passwords address username profile picture etc in edit profile.
"
                android:textSize="3mm"/>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

   <!-- <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:clickable="true"
        android:baselineAlignBottom="false"
        android:src="@drawable/help_button"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        android:backgroundTint="#F84A4A"
        android:longClickable="false"
        app:layout_anchorGravity="end|bottom"
        android:layout_marginRight="30dp"
        android:padding="20dp"/>-->


</androidx.coordinatorlayout.widget.CoordinatorLayout>